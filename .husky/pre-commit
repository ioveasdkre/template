#!/bin/sh
# This loads nvm.sh and sets the correct PATH before running hook

# ğŸ” è‡ªå‹•åµæ¸¬åŸ·è¡Œç’°å¢ƒ
if command -v bun &>/dev/null; then
  RUNNER="bun x"
